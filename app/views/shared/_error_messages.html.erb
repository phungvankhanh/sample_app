<% if @user.errors.any? %>
  <div class = "error_explanation">
    <div class = "alert alert-danger">
      <%= t "shared.error.the_form_contains" %><%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
