<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.header.sample_app"), "#", class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.header.home"), root_path %></li>
        <li><%= link_to t("layouts.header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.header.users_title"), "#" %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle",
              data: { toggle: "dropdown" } do %>
              <%= t "layouts.header.account"%>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts.header.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
